@model MarketPlace.WebUI.Models.ViewModels.AuctionListViewModel
@using MarketPlace.WebUI.Helpers

@{
    ViewBag.Title = "Аукционы";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("List", new { page = x }))
</div>

<br />

<form method="get">
    <div class="form-control inline">
        
        @Html.TextBox("search", ViewBag.Search as String, new { @class = "form-control", placeholder = "Поиск" })
        
        @*<input type="text" name="search" placeholder="Поиск" class="form-control">*@
        <input type="hidden" name="user" value="@ViewBag.User">
        <label class="control-label">Категория: </label>
        @Html.DropDownList("category", Model.Categories as SelectList,
                    htmlAttributes: new { @class = "form-control" })

        <input type="submit" value="Поиск" class="btn btn-default" />
    </div>
</form>

<table class="table">
    <tr>
        <th>Название</th>
        <th>Категория</th>
        <th>Описание</th>
        <th>Цена</th>
        <th>Заканчивается</th>
        <th></th>
    </tr>

@foreach (var item in Model.Auctions) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Title)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Description))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)

        </td>
        <td>
            @item.FinishDate.ToString()
        </td>
        <td>
            @Html.ActionLink("Подробнее", "Details", new { id=item.AuctionId }) |
        </td>
    </tr>
}

</table>
